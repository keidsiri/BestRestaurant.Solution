@using BestRestaurant.Models;

@model List<BestRestaurant.Models.Restaurant>;
  
<h2>All the restaurants </h2>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
}

<ul>
@foreach (Restaurant restaurant in Model)
  {
    <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li> 
  }
</ul>
