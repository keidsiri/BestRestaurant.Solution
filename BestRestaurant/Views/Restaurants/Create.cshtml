@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Restaurant

<h4>Add a new restaurant</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name) <br>

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)<br>

    @Html.LabelFor(model => model.Capacity)
    @Html.TextBoxFor(model => model.Capacity)<br>

    @Html.LabelFor(model => model.Location)
    @Html.TextBoxFor(model => model.Location)<br>

    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownList("CuisineId")

    <input type="submit" value="Add new restaurant" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all restaurants", "Index")</p>